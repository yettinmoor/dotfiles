#!/usr/bin/env sh

engine='anthy'

case "$1" in
	power)
		if pgrep ibus >/dev/null; then ibus exit; else ibus-daemon -drx; fi
		sleep .5
		polybar-msg hook module/ibus 1 ;;
	toggle)
		pgrep ibus >/dev/null || exit 1
		ibus engine "$( [ "$( ibus engine )" = "${engine}" ] && echo 'xkb:se::swe' || echo "${engine}" )"
		dunstify -r 9191 -u critical "$( $0 show )"
		polybar-msg hook module/ibus 1 ;;
	show)
		ibus engine 2>/dev/null | sed -e "s/${engine}/æ–‡/" -e 's/xkb.*/Aa/' ;;
	config)
		ibus-setup 2>/dev/null ;;
	*)
		ibus "$@" ;;
esac
