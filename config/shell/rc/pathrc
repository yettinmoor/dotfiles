# vim: filetype=sh

path() {
    ifhas() { [ -d "$1" ] && echo "$1"; }

    ifhas "$HOME/repos/dotfiles/scripts"
    ifhas "$HOME/.local/bin"

    # langs
    ifhas "$HOME/.cargo/bin"
    ifhas "$HOME/.nimble/bin"
    ifhas "$HOME/.ghcup/bin"
    gem environment path 2>/dev/null | tr ':' '\n'
    go env GOBIN 2>/dev/null

    ifhas /usr/local/bin
}

PATH="$(path | paste -s -d ':'):$PATH"
export PATH

unset -f path
