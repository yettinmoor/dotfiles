# vim: filetype=sh

path() {
    ifhas() { [ -d "$1" ] && echo "$1"; }
    ifhas "$HOME/.local/bin"
    ifhas "$HOME/.cargo/bin"
    ifhas "$HOME/.nimble/bin"
    ifhas "$HOME/.ghcup/bin"
    gem environment path | tr ':' '\n'
    go env GOBIN

    ifhas /usr/local/bin
}

PATH="$(path | paste -s -d ':'):$PATH"
export PATH

unset -f path
