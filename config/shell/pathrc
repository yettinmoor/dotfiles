# vim: filetype=sh

ifhas() {
    command -v $1 >/dev/null 2>&1 && echo $2
}

path() {
    echo $HOME/.local/bin
    ifhas cargo $HOME/.cargo/bin
    ifhas nim $HOME/.nimble/bin
    ifhas ghc $HOME/.ghcup/bin
    ifhas go "$(go env GOBIN)"
    echo /usr/local/bin
}

export PATH=$(path | tr '\n' ':')$PATH

unset -f path
unset -f ifhas
