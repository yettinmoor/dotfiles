# vim: filetype=sh

# core
alias ls='exa -h --group-directories-first'
alias ll='ls -l'
alias cp='cp -v'
alias mv='mv -v'
alias cd..='cd ..'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ka='killall'
alias wk='date +%V'
alias cls='clear'

# arch
alias p='sudo pacman'
alias SS='sudo systemctl'

# make
alias smi='sudo make install'
alias smic='sudo make install clean'
alias sni='sudo ninja install'

# misc
alias v='$EDITOR'
alias sv='sudoedit'
alias f='$FILE'
alias mpv='mpv --input-ipc-server=/tmp/mpvsoc$( date +%s )'
alias mpva='mpvwrapper'
alias trem='transmission-remote'
alias calcurse='calcurse -D ~/.config/calcurse'
alias pw='pass -c'
alias la='words'
alias ju='jupyter lab >/dev/null 2>&1 & disown'
alias otp='pass otp -c'
alias myip='curl ifconfig.me'
alias tree='tree -C'
alias cli='xclip -sel c -i'
alias clo='xclip -sel c -i'
alias z='zathura'
alias wi='cd ~/docs/wiki && nvim index.wiki'
alias se='dotedit'
alias magit='vim -c MagitOnly'
# alias ps='ps ax -o pid,ppid,etime,cmd'

# git
alias ga='git add'
alias gs='git status'
alias gc='git commit'
alias gr='git remote'
alias grm='git rm'
alias gd='git diff'
alias gch='git checkout'
alias gpu='git push'
alias gpl='git pull --recurse-submodules'
alias gg='git graph'
alias gl='git log'
alias gbr='git branch'
alias gcf='git config'

# zig
alias zb='zig build'
alias zbr='zig build run'
alias zbe='zig build-exe'
alias zr='zig run'
alias zt='zig test'
alias szb='sudo zig build -p /usr/local'

# ytdl
alias ytd='yt-dlp --config "$HOME/.config/youtube-dl/config"'
alias ytda='ytd -x -f "bestaudio[ext=mp3]/best"'
alias ytdp='ytd -o "%(playlist_index)s - %(title)s.%(ext)s"'

# Convenience functions
mkd() {
    mkdir -pv "$@"
    [ $# -eq 1 ] && { cd "$1" || exit; }
}

src() {
    # shellcheck disable=SC1091
    . "$XDG_CONFIG_HOME/profile"
    echo "Reloaded profile."
}

ps() {
    /usr/bin/ps ax -o pid,ppid,etime,cmd | awk "\$4 ~ /$1/"
}

x() {
    if [ "$#" -ge 1 ]; then
        sxiv -a "$@"
    else
        sxiv -at .
    fi
}

wttr() { less -S "$HOME/.local/share/weatherreport"; }

room() { du -h "${1:-.}" -d 1 | sort -h; }

cht() { curl "cht.sh/$1" 2> /dev/null | less; }
