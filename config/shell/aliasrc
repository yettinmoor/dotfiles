# vim: filetype=sh

# core
alias ls='eza -h --no-quotes --group-directories-first'
alias ll='ls -l'
alias cp='cp -iv'
alias mv='mv -iv'
alias ..='cd ..'
alias rg='rg -S'
alias diff='diff --color=auto'
alias ka='killall'
alias p='sudo pacman'
alias SS='sudo systemctl'

# make
alias smi='sudo make install'
alias ,c='compile'

# misc
alias br='spawn browser'
alias calcurse='calcurse -D ~/.config/calcurse'
alias f='$FILE'
alias ff='nvim "+Leaderf file"'
alias la='words'
alias gui='devour thunar'
alias myip='curl ifconfig.me'
alias rpush='mate push'
alias rpull='mate pull'
alias se='dotedit'
alias sv='sudoedit'
alias trans='trans -j'
alias tree='tree -C'
alias trem='transmission-remote'
alias v='nvim'
alias wi='cd ~/docs/wiki && nvim index.md'
alias wk='wikicurses'
alias z='spawn zathura'
alias じしょ='jisho'

# git
alias ga='git add'
alias gbr='git branch'
alias gc='git commit'
alias gcf='git config'
alias gch='git checkout'
alias gcp='git cherry-pick'
alias gd='git diff'
alias gg='git graph'
alias gl='git log'
alias gpl='git pull --recurse-submodules'
alias gpu='git push'
alias gr='git remote'
alias grm='git rm'
alias gs='git status'

# ytdl
alias ytd='yt-dlp'
alias ytda='ytd -x -f "bestaudio[ext=mp3]/best"'
alias ytdp='ytd -o "%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s"'

# lang
alias wde='wt -l de'
alias wru='wt -l ru'
alias wnl='wt -l nl'

# dirs
export AOC_INPUT_DIR="$HOME/lib/aoc"
export MNEMO_DIR="$HOME/docs/mnemo"
export WIKI_DIR="$HOME/docs/wiki"

# files
export HOMEPAGE="$HOME/docs/splash/index.html"

# --- Convenience functions

mkd() {
    mkdir -pv "$@"
    [ $# -eq 1 ] && { cd "$1" || exit; }
}

src() {
    # shellcheck disable=SC1091
    . "$XDG_CONFIG_HOME/profile"
    echo "Reloaded profile."
}

spawn() {
    setsid "$@" > /dev/null 2>&1 &
}

cli() {
    catecho "$@" | xclip -sel c -i
}

x() {
    if [ $# -eq 0 ]; then
        spawn sxiv -t .
    else
        spawn sxiv "$*"
    fi
}
