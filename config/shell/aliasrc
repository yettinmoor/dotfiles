# vim: filetype=sh

# core
alias ls='eza -h --no-quotes --group-directories-first'
alias ll='ls -l'
alias cp='cp -iv'
alias mv='mv -iv'
alias ..='cd ..'
alias rg='rg -S'
alias grep='rg'
alias diff='diff --color=auto'
alias ka='killall'
alias cls='clear'

# arch
alias p='sudo pacman'
alias SS='sudo systemctl'

# make
alias smi='sudo make install'
alias smic='sudo make install clean'
alias sni='sudo ninja install'

# misc
alias br='spawn browser'
alias calcurse='calcurse -D ~/.config/calcurse'
alias clo='xclip -sel c -o'
alias d='ddgr --np -x -n 3'
alias f='$FILE'
alias ff='nvim "+Leaderf file --fullScreen"'
alias ju='jupyter lab >/dev/null 2>&1 & disown'
alias la='words'
alias magit='vim -c MagitOnly'
alias mpv='mpv --input-ipc-server=/tmp/mpvsoc$( date +%s )'
alias myip='curl ifconfig.me'
alias otp='pass otp -c'
alias rpush='mate push'
alias rpull='mate pull'
alias se='dotedit'
alias sv='sudoedit'
alias tree='tree -C'
alias trem='transmission-remote'
alias v='$EDITOR'
alias wi='cd ~/docs/wiki && nvim index.md'
alias wk='wikicurses'
alias z='spawn zathura'
alias じしょ='jisho'

# git
alias ga='git add'
alias gbr='git branch'
alias gc='git commit'
alias gcf='git config'
alias gch='git checkout'
alias gd='git diff'
alias gg='git graph'
alias gl='git log'
alias gpl='git pull --recurse-submodules'
alias gpu='git push'
alias gr='git remote'
alias grm='git rm'
alias gs='git status'

# zig
alias zb='zig build'
alias zbr='zig build run'
alias zbe='zig build-exe'
alias zbt='zig build test'
alias zr='zig run'
alias zt='zig test'
alias szb='sudo zig build -p /usr/local'

# ytdl
alias ytd='yt-dlp'
alias ytda='ytd -x -f "bestaudio[ext=mp3]/best"'
alias ytdp='ytd -o "%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s"'

# lang
alias ru='wt -l ru'

# Convenience functions
mkd() {
    mkdir -pv "$@"
    [ $# -eq 1 ] && { cd "$1" || exit; }
}

src() {
    # shellcheck disable=SC1091
    . "$XDG_CONFIG_HOME/profile"
    echo "Reloaded profile."
}

spawn() {
    setsid "$@" > /dev/null 2>&1 &
}

cli() {
    catecho "$@" | xclip -sel c -i
}

x() {
    if [ $# -eq 0 ]; then
        spawn sxiv -t .
    else
        spawn sxiv "$*"
    fi
}
