#!/usr/bin/env sh

# Keyboard
kbset &

# Appearance
setbg &
xset s off -dpms
xrdb ~/.config/xorg/Xresources
xsetroot -cursor_name left_ptr
picom -b &
redshift &
unclutter --timeout 3 &

# Daemons
sxhkd &
fcitx5 -d &
dunst &
syncthing --no-browser &
transmission-daemon &

# Pings
rssping &
forecast &
