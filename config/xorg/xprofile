#!/usr/bin/env sh

# Keyboard
kbset &

# Appearance
setbg &
xrdb ~/.config/xorg/Xresources
xsetroot -cursor_name left_ptr

# Daemons
sxhkd &
bard init >> $XDG_CACHE_HOME/bard.log 2>&1 &
dunst &
picom -b --experimental-backends
redshift &
syncthing -no-browser >/dev/null &
unclutter --timeout 3 &
mpd &
( sleep 1; mpdnot ) &

# Some pings
rssping &
forecast &
batwatch &
