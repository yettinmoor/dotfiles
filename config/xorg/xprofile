#!/bin/sh

# Background
setbg &

# Keyboard
setxkbmap -option caps:escape -option compose:sclk -variant nodeadkeys se
xmodmap -e 'keycode 135 = Super_R' &
xset r rate 300 50 &

# Xresources
if [ -f ~/.config/xorg/Xresources.custom ]; then
	xrdb ~/.config/xorg/Xresources.custom
else
	xrdb ~/.config/xorg/Xresources
fi

# Start up daemons
sxhkd &
dunst &
xcompmgr &
syncthing -no-browser >/dev/null &
unclutter --timeout 3 &
mpd &
