# Term
super + Return
	$TERM
super + shift + Return
	samedir

# bspwm
super + F5
    bspc wm -r; pkill -SIGUSR1 picom
super + {_,shift + } {1,2,3,4,5,6,7,8,9,0}
    bspc {desktop -f,node -d} focused:^{1,2,3,4,5,6,7,8,9,0}
super + q
    bspc node -c
super + f
    bspc node -t \~fullscreen
super + {_,shift +} {j,k}
    bspc node {-f,-s} '{next,prev}.local.!hidden.window'
super + {_,shift +} {h,l}
    bspc node {@parent,@/1/parent} -r {-,+}.05
super + space
    bspc node -t tiled; bspc node -s @/1
super + shift + space
    bspc node -t floating
super + shift + r
    bspc node @/1/parent -R 270
super + {_,shift +} z
	bspwm-gap-toggle {full,doc}
super Tab
	bspc monitor -f next
super + {_,shift +} Tab
	bspc node -m next --follow

# Letters
super + shift + q
	prompt "Exit X?" "killall Xorg"
super + w
	dmenu -l 0 -p browse | xargs browser
super + e
	$TERM -e $FILE
super + r
	$TERM --working-directory ~/docs/wiki -e $EDITOR ~/docs/wiki/scratch.md
super + t
	tor
super + u
	spad
super + i
	cd ~/pics && fd --strip-cwd-prefix '(jpe?g|png)' | dmenu -p clipimg | xargs -r clipimg
super + o
	open -d -c $HOME
super + shift + o
	open -d -c ~/media
super + p
	busctl --user call org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player PlayPause
super + shift + p
	pauseall
super + a
	$TERM -e qalc -i -f ~/.config/qalculate/vars
super + s
	spotify
super + shift + s
	warncaps
super + d
	rofi -show run
super + shift + d
	discord
super + x
	lockscreen
super + shift + x
	prompt 'Shutdown computer?' 'sudo -A shutdown -h now'
super + {_,shift +} c
	{show,qr}clip
super + v
	$TERM --working-directory ~/docs/wiki -e $EDITOR ~/docs/wiki/vsc.md
super + b
	firefox --new-window $HOMEPAGE
super + n
	! pgrep newsboat && $TERM -e newsboat && polybar-msg action '#rss.hook.0'
super + shift + n
	rssping
super + m
	pamixer --toggle-mute

# Etc
super + comma
	qunicode
super + {_,shift +} period
	q{copy,pass}
super + Print
	scrotpick
super + {_, shift +} grave
	ib {toggle, select}
# ctrl + space
# 	dunstctl close-all

# Function keys
super + F1
	manview
super + {_,shift +} F2
	setbg {pick,random}

# Audio
super + {_,shift +} BackSpace
	mpc {prev,next}
super + {minus,plus}
	pamixer --unmute --{decrease,increase} 5

# XF86 keys
XF86AudioMute
	pamixer --toggle-mute
XF86Audio{Lower,Raise}Volume
	pamixer --unmute --{decrease,increase} 5
XF86Audio{Play,Stop,Next,Prev}
	mpc {toggle,pause,next,prev}
XF86MonBrightness{Down,Up}
	brightnessctl set 5%{-,+}
