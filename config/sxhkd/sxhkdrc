# Term
super + Return
	$TERMINAL
super + shift + Return
	samedir

# Letters
super + shift + q
	prompt "Exit X?" "killall Xorg"
super + {_,shift +} w
	urlgoto { ,--new-window}
super + e
	$TERMINAL -e $FILE
super + t
	tor
super + y
	$TERMINAL -e calcurse -D ~/.config/calcurse
super + u
	$TERMINAL -e $EDITOR ~/docs/wiki/scratch.wiki
super + o
	open ~ 'repos vidya zig-cache'
super + shift + o
	open /media 'steam gsil'
super + p
	mpc toggle
super + shift + p
	pauseall
super + a
	$TERMINAL -e qalc
super + shift + a
	anki
super + s
	qplay library
super + d
	rofi -show run
super + shift + d
	discord
super + x
	lockscreen
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + {_,shift +} c
	{show,qr}clip
super + v
	$TERMINAL -e ncmpcpp -s visualizer
super + {_, shift +} b
	$BROWSER {$HOMEPAGE, --new-window $HOMEPAGE}
super + n
	! pgrep newsboat && $TERMINAL -e newsboat && bard update rss
super + shift + n
	rssping
super + m
	isopen ncmpcpp || $TERMINAL -e ncmpcpp
super + shift + m
	audio mute

# Etc
super + comma
	qunicode
super + {_,shift +} period
	{qcopy,qpass}
super + Print
	scrotpick
super + {_, shift +} grave
	ib {toggle, power}

# Function keys
super + F1
	manview
super + {_,shift +} F2
	setbg {pick,random}
super + {_,shift +} F9
	dmenu{mount,umount}

# Caps Lock
super + Escape
	warncaps

# Audio
super + {_,shift +} BackSpace
	mpc {prev,next}
super + {minus,plus}
	audio {dec,inc} 5

# XF86 keys
XF86AudioMute
	audio mute
XF86Audio{Lower,Raise}Volume
	audio {dec,inc} 5
XF86Audio{Play,Stop,Next,Prev}
	mpc {toggle,pause,next,prev}
XF86MonBrightness{Down,Up}
	brightnessctl set 20%{-,+}
