# Term
super + Return
  $TERMINAL
super + shift + Return
  samedir

# Letters
super + shift + q
  prompt "Exit X?" "killall Xorg"
super + w
  setsid urlparse dmenu | xargs -r0 $BROWSER &
super + e
  $TERMINAL -e $FILE
super + t
  tor; dwmbar torrents
super + o
  open
super + p
  mpc toggle
super + shift + p
  pauseall
super + a
  $TERMINAL -e python -q
super + shift + a
  $TERMINAL -e pulsemixer
super + s
  $TERMINAL -e calcurse -D ~/.config/calcurse
super + d
  dmenu_run
super + x
  lockscreen
super + shift + x
  prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + c
  plumb
super + b
  $BROWSER $HOMEPAGE
super + n
  $TERMINAL -e newsboat; dwmbar rss
super + shift + n
  rssping
super + m
  $TERMINAL -e ncmpcpp
super + shift + m
  audio mute

# Etc
super + comma
  dmenuunicode
super + {_,shift +} period
  {qcopy,qpass}
super + {_,shift +} Insert
  {show,qr}clip
super + Print
  maimpick
super + {_,shift +} section
  ib {toggle, power}

# Function keys
super + F1
  manview
super + {_,shift +} F2
  setbg {pick,random}
super + F3
  displayselect
super + F4
  timer
super + F7
  open /media
super + F8
  warncaps
super + {F9,F10}
  dmenu{mount,umount}

# Audio
super + {_,shift +} BackSpace
  mpc {prev,next}
super + {minus,plus}
  audio 2{-,+}

# XF86 keys
XF86AudioMute
  audio mute
XF86Audio{Lower,Raise}Volume
  audio 2{-,+}
XF86Audio{Play,Stop,Next,Prev}
  mpc {toggle,pause,next,prev}
XF86MonBrightness{Down,Up}
  xbacklight {-dec,-inc} 15
