# Term
super + Return
	$TERMINAL
super + shift + Return
	samedir

# bspwm
super + F5
	bspc wm -r; pkill -SIGUSR1 picom
super + {_,shift + } {1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f,node -d} ^{1,2,3,4,5,6,7,8,9,0}
super + q
	bspc node -c
super + f
	bspc node -t \~fullscreen
super + {_,shift +} {j,k}
	bspc node {-f,-s} {next,prev}.local.!hidden.window
super + {_,shift +} {h,l}
	bspc node {@parent,@/1/parent} -r {-,+}.05
super + space
	bspc node -t tiled; bspc node -s @/1
super + shift + space
	bspc node -t floating
super + shift + r
	bspc node @/1/parent -R 270

# Letters
super + shift + q
	prompt "Exit X?" "killall Xorg"
super + w
	urlgoto
super + shift + w
	compiler ~/docs/wiki/index.wiki && $BROWSER --new-window ~/docs/wiki/.html/html/index.html
super + e
	$TERMINAL -e $FILE
super + r
	audio toggle
super + t
	tor
super + y
	$TERMINAL -e calcurse -D ~/.config/calcurse
super + o
	open ~ 'repos vidya'
super + shift + o
	open /media 'steam'
super + p
	mpc toggle
super + shift + p
	pauseall
super + a
	$TERMINAL -e qalc
super + shift + a
	anki
super + s
	qplay library
super + shift + s
	qplay playlist
super + d
	rofi -show run
super + shift + d
	discord
super + {_, shift +} z
	bspc config -d any.focused window_gap {30,0}
super + x
	lockscreen
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + c
	plumb
super + shift + c
	if pgrep -x picom; then killall picom; else picom -b --experimental-backends; fi
super + v
	thunderbird
super + b
	$BROWSER $HOMEPAGE
super + n
	$TERMINAL -e newsboat && polybar-msg hook module/rss 1
super + shift + n
	rssping
super + m
	$TERMINAL -e ncmpcpp
super + shift + m
	audio vol mute

# Etc
super + comma
	qunicode
super + {_,shift +} period
	{qcopy,qpass}
super + {_,shift +} Insert
	{show,qr}clip
super + Print
	scrotpick
super + {_,shift +} section
	ib {toggle, power}

# Function keys
super + F1
	manview
super + {_,shift +} F2
	setbg {pick,random}
super + F7
	open /media
super + {_,shift +} F9
	dmenu{mount,umount}

# Caps Lock
super + Escape
	warncaps

# Audio
super + {_,shift +} BackSpace
	mpc {prev,next}
super + {minus,plus}
	audio vol 2{-,+}

# XF86 keys
XF86AudioMute
	audio vol mute
XF86Audio{Lower,Raise}Volume
	audio vol 2{-,+}
XF86Audio{Play,Stop,Next,Prev}
	mpc {toggle,pause,next,prev}
XF86MonBrightness{Down,Up}
	xbacklight {-dec,-inc} 15
