#!/bin/bash
while read -r file; do
    case "$1" in
        w) setbg "$file" & ;;
        r) convert -rotate 90 "$file" "$file" ;;
        R) convert -rotate -90 "$file" "$file" ;;
        f) convert -flop "$file" "$file" ;;
        e) notify-send sxiv "$(identify "$file" | cut -f1)" ;;
        g) launch -dx thunar "$file" ;;
    esac
done
