#!/usr/bin/env sh
# Profile file. Runs on login.

export SHELL=zsh
export PATH=$HOME/.local/bin:$HOME/.local/share/sympath:$PATH
export EDITOR=nvim
export TERMINAL=st
export BROWSER=brave
export READER=zathura
export FILE=lf
export ZDOTDIR=$HOME/.config/zsh

export SUDO_ASKPASS=$HOME/.local/bin/dmenupass
export INPUTRC=$HOME/.config/inputrc
export LESSHISTFILE=/dev/null
export XAUTHORITY=$HOME/.config/xorg/.Xauthority

export LOCATION=Ljungsbro
export HOMEPAGE=$HOME/repos/splash/home.html
export GIT=https://github.com/yettinmoor

export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export XIM_PROGRAM=/usr/bin/ibus-daemon
export QT_QPA_PLATFORMTHEME=qt5ct

source $HOME/.config/zsh/.zshrc

# Autorun startx
[ "$(tty)" = "/dev/tty1" ] && ! pgrep -x Xorg >/dev/null && exec startx

# Switch escape and caps if tty:
sudo -n loadkeys ~/.local/share/ttymaps.kmap 2>/dev/null
