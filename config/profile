#!/usr/bin/env sh
# Profile file. Runs on login.

export SHELL=zsh
export PATH=$HOME/.local/bin:$HOME/.config/sympath:$PATH
export EDITOR=nvim
export TERMINAL=st
export BROWSER=firefox
export READER=zathura
export FILE=lf
export ZDOTDIR=$HOME/.config/zsh

export SUDO_ASKPASS=$HOME/.local/bin/dmenupass
export INPUTRC=$HOME/.config/inputrc
export LESSHISTFILE=/dev/null
export XAUTHORITY=$HOME/.config/xorg/.Xauthority

export LOCATION=Ljungsbro
export HOMEPAGE=$HOME/repos/homepage/home.html
export GIT=https://github.com/yettinmoor

export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export XIM_PROGRAM=/usr/bin/ibus-daemon
export QT_QPA_PLATFORMTHEME=qt5ct

export LESS=-R
export LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
export LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
export LESS_TERMCAP_me="$(printf '%b' '[0m')"
export LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
export LESS_TERMCAP_se="$(printf '%b' '[0m')"
export LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
export LESS_TERMCAP_ue="$(printf '%b' '[0m')"

export LF_ICONS='di=:fi=:ln=:or=:ex=:*.c=:*.cc=:*.clj=:*.coffee=:*.cpp=:*.css=:*.d=:*.dart=:*.erl=:*.exs=:*.fs=:*.go=:*.h=:*.hh=:*.hpp=:*.hs=:*.html=:*.java=:*.jl=:*.js=:*.json=:*.lua=:*.md=:*.php=:*.pl=:*.pro=:*.py=:*.rb=:*.rs=:*.scala=:*.ts=:*.tar=:*.tgz=:*.arc=:*.arj=:*.taz=:*.lha=:*.lz4=:*.lzh=:*.tlz=:*.txz=:*.tzo=:*.t7z=:*.zip=:*.7z=:*.jpg=:*.jpeg=:*.gif=:*.bmp=:*.ppm=:*.tiff=:*.png=:*.svg=:*.mov=:*.mpg=:*.mpeg=:*.m2v=:*.mkv=:*.webm=:*.ogm=:*.mp4=:*.m4v=:*.mp4v=:*.vob=:*.qt=:*.nuv=:*.wmv=:*.avi=:*.aac=:*.flac=:*.m4a=:*.mid=:*.midi=:*.mka=:*.mp3=:*.mpc=:*.ogg=:*.wav=:*.oga=:*.opus=:*.pdf=:*.djvu=:*.epub='

source $HOME/.config/zsh/.zshrc

# Autorun startx
[ "$(tty)" = "/dev/tty1" ] && ! pgrep -x Xorg >/dev/null && exec startx

# Switch escape and caps if tty:
sudo -n loadkeys ~/.local/share/ttymaps.kmap 2>/dev/null
