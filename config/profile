#!/usr/bin/env sh
# Profile file. Runs on login.

# XDG.
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:=$HOME/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:=$HOME/.cache}"
export XDG_DATA_HOME="${XDG_DATA_HOME:=$HOME/.local/share}"

# shellcheck disable=SC1091
. "$XDG_CONFIG_HOME/shell/pathrc"

# defaults.
export SHELL=zsh
export EDITOR=nvim
export OPENER=launch
export TERM=st
export TERMINAL=$TERM
export PAGER='bat -p'
export BROWSER=qutebrowser
export READER=zathura
export FILE=lf
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

GPG_TTY="$(tty)"
export GPG_TTY

# X
export XAUTHORITY="$HOME/.Xauthority"

# misc program stuff.
export BAT_THEME=gruvbox-dark
export FZF_DEFAULT_OPTS='--border --multi --reverse'
export DOTNET_CLI_TELEMETRY_OPTOUT=1
export INPUTRC="$XDG_CONFIG_HOME/inputrc"
export LD_LIBARY_PATH=/usr/local/lib
export LESS=-R
export LESSHISTFILE=/dev/null
export PYTHONHISTORY="$XDG_CACHE_HOME/python"
export SUDO_ASKPASS="$HOME/.local/bin/dmenupass"

MAKEFLAGS="-j $(nproc)"
export MAKEFLAGS

# fcitx stuff.
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export SDL_IM_MODULE=fcitx
export GLFW_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx

# zshrc.
# shellcheck disable=SC1091
case "$0" in
*zsh) . "$ZDOTDIR/.zshrc" ;;
*sh) . "$XDG_CONFIG_HOME/shell/allrc" ;;
esac

# SSH agent
# . start-ssh-agent

# Autorun startx.
[ "$(tty)" = "/dev/tty1" ] && ! pgrep -x Xorg >/dev/null && exec startx

# Switch escape and caps if tty.
tty --quiet && sudo -n loadkeys "$XDG_DATA_HOME/ttymaps.kmap" 2>/dev/null
