#!/usr/bin/env perl
use v5.36;

chomp($_ = <STDIN>);

my $URL = "^(https?://)?(www\.)?[-a-zA-Z0-9@:%._\+~#=]+\.[a-zA-Z0-9]+.*\$";
if (/"$URL"/) { print; exit; }

my @args = split / +/, $_;
my $key = shift @args;

my $DIR = "$ENV{HOME}/.config/urlparse";
my $find = "rg '^$key (.*)' -r '\$1'";

if (my $url = `$find "$DIR/searchengines"`) {
    printf "$url", (join ' ', @args);
} elsif ($url = `$find "$DIR/bookmarks"`) {
    print "$url";
} else {
    unshift @args, $key;
    printf `awk 'NR==1 { print \$2 }'`, join(' ', @args);
}
