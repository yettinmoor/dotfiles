#!/usr/bin/env sh

cd ~/music

case $1 in
	library)
        sel=$(fd | sort | echo "$(cat -)" '\nSTOP' | rofi -dmenu -i) ;;
	playlist)
        cd Playlists
		sel=$(ls | rofi -dmenu -i -L 5 | xargs -r cat) ;;
esac

[ -z "$sel" ] && exit 1

mpc clear
if ! [ "$sel" -eq 'STOP' ]; then
    echo "$sel" | mpc add
    mpc play
fi
