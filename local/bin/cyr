    -e 's/T/Т/g' \
    -e 's/U/У/g' \
    -e 's/F/Ф/g' \
    -e 's/X/Х/g' \
    -e 's/C/Ц/g' \
    -e 's/Y/Ы/g' \
    -e 's/É/Э/g' \
    -e "s/''/Ь/g" \
    -e 's/""/Ъ/g' \
