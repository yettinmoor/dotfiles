#!/usr/bin/env sh
# { cut -d ';' -f 1 ~/.config/unicode/* | rofi -dmenu -p 'Copy unicode glyph' -i -l 20 || exit 1; } | cut -d' ' -f1 | xclip -sel c -r
{
	grep 'U+' ~/.config/unicode/full \
		| sed 's/U+[0-9A-Fa-f]* ([^)]*)//' \
		| rofi -dmenu -p 'Copy unicode glyph' -i -l 20 || exit 1;
} | cut -d' ' -f1 | xclip -sel c -r
