#!/usr/bin/env sh

while getopts el:ab opt; do
    case "$opt" in
        e) lang=en;;
        l) lang="$OPTARG" ;;
        a) lang= ;;
        b) browse=1 ;;
    esac
done
shift $((OPTIND - 1))

if [ -n "$browse" ]; then
    browser "!wt $(catecho "$@")"
else
    URL=https://en.wiktionary.org/api/rest_v1/page/definition
    curl -s "$URL/$(catecho "$@" | tr ' ' '_')" \
        | sed 's/<[^>]*>//g' \
        | jq ".${lang-en} // .${lang}"
fi
