#!/usr/bin/env sh
# Set as a cron job to check for new RSS entries for newsboat.
# If newsboat is open, sends it an "R" key to refresh.

pgrep -x rssping > /dev/null && exit 1
isconnected || exit 1

pgrep -x newsboat && xdotool search --name newsboat key R && exit

bard update rss:🔁
newsboat -x reload
bard update rss
