#!/usr/bin/env sh
# Volume interface for sxhkd.

case $1 in
    mute)
        pamixer --toggle-mute
        ;;
    inc)
        pamixer --unmute
        pamixer --increase "$2"
        ;;
    dec)
        pamixer --unmute
        pamixer --decrease "$2"
        ;;
    set)
        pamixer --unmute
        pamixer --set-volume "$2"
        ;;
    *)
        echo 'audio [mute|inc x|dec x|set x]'
        exit 1
        ;;
esac

bard update vol
