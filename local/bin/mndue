#!/usr/bin/env sh

cd "${MNEMO_DIR:?}" || exit 1

fd -e mnemo . "$@" -X mnemo -i \
    | cut -d ' ' -f2 \
    | paste -sd '+' \
    | bc \
    | awk '{print $1, "cards due"}'

fd -e mnemo . "$@" -X mnemo -i \
    | sort \
    | sed 's/^.\///; /[1-9][0-9]* due/s/.*/\x1b[0;33m&\x1b[0m/; /0 due/s/.*/\x1b[0;37m&\x1b[0m/' \
    | tabulate -s '[:,]' -f plain
