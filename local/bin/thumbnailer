#!/usr/bin/env sh
# Creates a nice 3x3 collage thumbnail from a video file.

DEFAULT_QUAL=7
DEFAULT_SIZE=300

usage() {
    echo 'Usage: thumbnailer [options] infile'
    echo '  -o [outfile]  Outfile path (default: [infile].jpg)'
    echo "  -s [size]     Tile width in pixels (default: $DEFAULT_SIZE)"
    echo "  -q [quality]  Quality (1-10, default: $DEFAULT_QUAL)"
    echo '  -h            Print usage'
    exit "$1"
}

while getopts :ho:q:s: o; do
    case "$o" in
        o) outfile=$OPTARG ;;
        q) qual=$OPTARG ;;
        s) size=$OPTARG ;;
        h) usage 0 ;;
        ?) usage 1 ;;
    esac
done
shift $((OPTIND - 1))

infile="$1"
outfile="${outfile:-${infile}.jpg}"

[ -z "$infile" ] && usage 1

seq 10 10 90 \
    | xargs -P 0 -I {} \
        ffmpegthumbnailer \
        -i "$infile" \
        -o "${outfile}_{}" \
        -s "${size:-$DEFAULT_SIZE}" \
        -q "${qual:-$DEFAULT_QUAL}" \
        -t "{}%"

fd -u --prune "$(basename "$outfile")_" "$(dirname "$outfile")" -X \
    montage -geometry +0+0 {} "$outfile" \; -X rm
