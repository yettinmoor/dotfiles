#!/usr/bin/env sh

file="$(readlink -f "$1")"
base="${file%.*}"

cd "$(dirname "$file")" || exit 1

[ -f .run ] && {
    sh .run
    exit $?
}

case "$file" in
    *.tex | *.pandoc) zathura "$base".pdf ;;
    *.html) setsid browser "$file" & ;;
    *.sent) setsid sent "$file" > /dev/null 2>&1 & ;;
    *.hs) ghci "$file" ;;
    *.py) python -qi "$file" ;;
    */wiki/*.md) echo "$base" \
        | sed 's:wiki:wiki/html:' \
        | xargs -r -I {} setsid "$BROWSER" --target window "{}.html" ;;
    *.c | *.cpp) "$base" ;;
    *.nim) "$base" ;;
esac
