#!/usr/bin/env sh

outfile="$XDG_DATA_HOME/weatherreport"

fetch() {
    isconnected || exit 1
    report=$(curl -s "wttr.in/${1:-$LOCATION}")
    echo "$report" | grep "Sorry" && exit 1 # Exit if wttr server overload
    echo "$report" > "$outfile"
}

display() {
    sed -nE '4s/.*([+-][0-9]+).*/\1Â°/p' "$outfile" | tr -d '+'
}

case "$1" in
    display) display "$2" ;;
    fetch)   fetch "$2" ;;
    *)
        echo 'forecast [fetch|display]' >&2
        exit 1
        ;;
esac
