#!/usr/bin/env sh
url=https://www.le-dictionnaire.com/definition

if [ "$1" = -b ]; then
    shift
    browser "$url/$(catecho "$@")"
    exit
fi

curl -sL $url/"$(catecho "$@" | sed 's/ /%20/g')" \
    | htmlq div.defbox 'span, div.motboxinfo, li' -t

