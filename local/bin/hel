#!/usr/bin/env sh

catecho "$@" | sed -E '
    # dasia
    s/\bH[Aa]/Ἁ/g
    s/\bH(EE|ee)/Ἡ/g
    s/\bH[Ee]/Ἑ/g
    s/\bH[Ii]/Ἱ/g
    s/\bH(OO|oo)/Ὡ/g
    s/\bH[Oo]/Ὁ/g
    s/\bH[UuYy]/Ὑ/g
    s/\bha/ἁ/g
    s/\bhee/ἡ/g
    s/\bhe/ἑ/g
    s/\bhi/ἱ/g
    s/\bhoo/ὡ/g
    s/\bho/ὁ/g
    s/\bh[uy]/ὑ/g

    # psili
    s/\bA/Ἀ/g
    s/\bE[Ee]/Ἠ/g
    s/\bE/Ἐ/g
    s/\bI/Ἰ/g
    s/\bO[Oo]/Ὠ/g
    s/\bO/Ὀ/g
    s/\b[UY]/ὐ/g
    s/\ba/ἀ/g
    s/\bee/ἠ/g
    s/\be/ἐ/g
    s/\bi/ἰ/g
    s/\boo/ὠ/g
    s/\bo/ὀ/g
    s/\b[uy]/ὐ/g

    # oxia & dasia
    s/\bH[Áá]/Ἅ/g
    s/\bH(ÉÉ|éé)/Ἥ/g
    s/\bH[Éé]/Ἕ/g
    s/\bH[Íí]/Ἵ/g
    s/\bH(ÓÓ|óó)/Ὥ/g
    s/\bH[Óó]/Ὅ/g
    s/\bH[ÚúÝý]/Ὕ/g
    s/\bhá/ἅ/g
    s/\bhéé/ἥ/g
    s/\bhé/ἕ/g
    s/\bhí/ἵ/g
    s/\bhóó/ὥ/g
    s/\bhó/ὅ/g
    s/\bh[úý]/ὕ/g

    # oxia & psili
    s/\bá/ἄ/g
    s/\béé/ἤ/g
    s/\bé/ἔ/g
    s/\bí/ἴ/g
    s/\bóó/ὤ/g
    s/\bó/ὄ/g
    s/\b[úý]/ὔ/g

    # oxia
    s/Á/Ά/g
    s/É[Éé]/Ή/g
    s/É/Έ/g
    s/Í/Ί/g
    s/Ó[Óo]/Ώ/g
    s/Ó/Ό/g
    s/[ÚÝ]/Ύ/g
    s/á/ά/g
    s/éé/ή/g
    s/é/έ/g
    s/í/ί/g
    s/óó/ώ/g
    s/ó/ό/g
    s/[úý]/ύ/g

    # vowels
    s/A/Α/g
    s/E[Ee]/Η/g
    s/E/Ε/g
    s/O[Oo]/Ω/g
    s/O/Ο/g
    s/Y/Υ/g
    s/a/α/g
    s/ee/η/g
    s/e/ε/g
    s/oo/ω/g
    s/o/ο/g
    s/y/υ/g


    # consonants
    s/T[Hh]/Θ/g
    s/(P[Hh]|F)/Φ/g
    s/K[Hh]/Χ/g
    s/P[Ss]/Ψ/g
    s/B/Β/g
    s/G/Γ/g
    s/D/Δ/g
    s/Z/Ζ/g
    s/I/Ι/g
    s/K/Κ/g
    s/L/Λ/g
    s/M/Μ/g
    s/N/Ν/g
    s/X/Ξ/g
    s/P/Π/g
    s/R/Ρ/g
    s/S\B/Σ/g
    s/S/Σ/g
    s/T/Τ/g
    s/th/θ/g
    s/(ph|f)/φ/g
    s/kh/χ/g
    s/ps/ψ/g
    s/b/β/g
    s/g/γ/g
    s/d/δ/g
    s/z/ζ/g
    s/i/ι/g
    s/k/κ/g
    s/l/λ/g
    s/m/μ/g
    s/n/ν/g
    s/x/ξ/g
    s/p/π/g
    s/r/ρ/g
    s/s\b/ς/g
    s/s/σ/g
    s/t/τ/g

    s/#//g
    '
