#!/usr/bin/env sh
# Start/open transmission-daemon and tremc; add torrents from args
# Default mime app for .torrent & magnet links

command -v transmission-daemon || exit 1

if ! pgrep -x transmission-da > /dev/null; then
    notify-send "Starting torrent daemon..."
    transmission-daemon
    while ! pgrep -x transmission-da > /dev/null; do true; done
    sleep 1
fi

while getopts w: o; do
    case "$o" in
        w) dir="$OPTARG" ;;
        *) exit 1 ;;
    esac
done

shift $((OPTIND - 1))

# shellcheck disable=SC2086
for file in "$@"; do
    echo adding \`"$file"\`
    transmission-remote -a "$file" -w "${dir:-$HOME/dl}" \
        && rm -v "$file"
done

[ -n "$DISPLAY" ] \
    && [ "$#" -gt 0 ] \
    && notify-send "ï€™ $# torrent(s) added."

tremc
