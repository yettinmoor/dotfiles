#!/usr/bin/env sh

# `up down` - download updates (cronjob).
# `up`      - install updates.

case "$1" in
    'down')
        sudo pacman -Syyuw --noconfirm
        nvim +'PlugUpdate --sync' +qa
        ;;
    '')
        sudo pacman -Syu
        ;;
    *)
        exit 1
        ;;
esac

dwmbar updates
