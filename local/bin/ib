#!/usr/bin/env sh

engines=$(
    nl -s ' ' -w 1 <<-EOF
ðŸ‡¯ðŸ‡µ anthy
ðŸ‡¨ðŸ‡³ pinyin
ðŸ‡°ðŸ‡· hangul
ðŸ‡¬ðŸ‡· keyboard-gr
ðŸ‡·ðŸ‡º keyboard-ru-phonetic
ðŸ‡®ðŸ‡± keyboard-il-phonetic
ðŸ‡¸ðŸ‡¦ keyboard-ara-buckwalter
EOF
)

case "$1" in
toggle)
    case "$(fcitx5-remote)" in
    1)
        fcitx5-remote -t
        ;;
    2)
        fcitx5-remote -T
        ;;
    *) ;;
    esac
    ;;

select)
    echo "$engines" |
        cut -d ' ' -f1-2 |
        dmenu -p 'Keyboard layout' -L "$(echo "$engines" | wc -l)" -width 10 |
        {
            read -r choice
            choice=$(echo "$engines" | grep "${choice:?}")
            engine=$(echo "$choice" | cut -d ' ' -f3)
            fcitx5-remote -s "$engine"
        }
    ;;

config)
    setsid fcitx5-configtool >/dev/null 2>&1 &
    ;;

*)
    echo invalid option
    exit 1
    ;;
esac
