#!/usr/bin/env sh

usage() {
    echo 'store [-h] [-p] [-t dir] file(s)'
    exit "$1"
}

while getopts t:ph o; do
    case "$o" in
        t) dir=$OPTARG ;;
        p) PRINT=1 ;;
        h) usage 0 ;;
        *) usage 1 ;;
    esac
done

shift $((OPTIND - 1))

[ $# -eq 0 ] && usage 1

if [ -n "$dir" ]; then
    echo "$dir"
else
    dirpick || exit 1
fi | {
    read -r dir

    for file in "$@"; do
        ext="${file##*.}"
        [ "$ext" = jpeg ] && ext=jpg
        outfile="$(sha256sum "$file" | cut -c 1-10).$ext"
        mkdir -p "$dir"
        if [ -n "$PRINT" ]; then
            # print to stdout
            # used by qutedl
            mv "$file" "$dir/$outfile"
            echo "$outfile"
        else
            # print to stderr
            mv -v "$file" "$dir/$outfile"
        fi
    done
}
