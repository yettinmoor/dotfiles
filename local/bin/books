#!/usr/bin/env sh

FILE="$WIKI_DIR/booklog.md"

if [ "$1" = '-e' ]; then
    $EDITOR "$FILE"
    exit
fi

if [ "$1" = '-x' ]; then
    shift
    exact=1
fi

[ -n "$1" ] && year="$1" || year="$(date +%Y)"

sed -e "0,/^\\# $year\$/d" -e "/$((year - 1))/q" "$FILE" \
    | rg '\*\*(.+)\*\*' -r '$1' \
    | if [ -n "$exact" ]; then rg '\[x\]'; else cat -; fi \
    | tr -d '_' \
    | tac
