#!/usr/bin/env sh

DOT=~/repos/dotfiles

if [ -z "$1" ]; then
    sel() { sort | uniq | fzf --preview="bat -p --color always $DOT/{}"; }
else
    sel() { grep -m 1 "$1"; }
fi

{
    git -C $DOT ls-tree -r --name-only HEAD &
    fd . --base-directory $DOT local/bin &
    fd . --base-directory $DOT config/shell &
    wait
} \
    | sel "$1" \
    | xargs -r -I {} "$EDITOR" "$HOME/repos/dotfiles/{}"
