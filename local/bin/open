#!/usr/bin/env sh

EXTS='\.(jpe?g|png|gif|mkv|mp4|m4v|avi|webm|mp3|pdf|djvu|epub|txt|md|sent|svg|html|cbr|cbz|wiki)$'

browser() {
    if [ -n "$OPEN_XORG" ]; then
        dmenu -p "open $(pwd)"
    else
        fzf
    fi
}

while getopts dc: o; do
    case "$o" in
        d)
            [ -n "$DISPLAY" ] && export OPEN_XORG=1
            ;;
        c)
            if ! cd "$OPTARG"; then
                echo could not cd to dir: "$OPTARG"
                exit 1
            fi
            ;;
        ?)
            echo 'usage: open [-d] [-c dir] -- [fd flags]'
            exit 1
            ;;
    esac
done
shift $((OPTIND - 1))

exclude="{$(paste -sd , .openignore 2> /dev/null)}"

fd --strip-cwd-prefix -t f --mount "$EXTS" -E "$exclude" \
    | browser \
    | {
        read -r file
        [ -z "$file" ] && exit 1
        if [ -n "$OPEN_XORG" ]; then launch "$file"; else $EDITOR "$file"; fi
    }
