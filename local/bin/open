#!/usr/bin/env sh

browser() {
    if [ -n "$OPEN_XORG" ]; then
        dmenu -i -p "open $(pwd)" -theme-str 'window {width: 80%;}'
    else
        fzf
    fi
}

while getopts dc: o; do
    case "$o" in
        d)
            [ -n "$DISPLAY" ] && export OPEN_XORG=1
            ;;
        c)
            cd "$OPTARG" || exit 1
            ;;
        ?)
            echo 'usage: open [-d] [-c dir] -- [fd flags]'
            exit 1
            ;;
    esac
done

shift $((OPTIND - 1))

exts='\.(jpe?g|png|gif|mkv|mp4|m4v|avi|webm|mp3|pdf|djvu|epub|txt|md|sent|svg|html|cbr|cbz)$'

# shellcheck disable=SC2016
fd --strip-cwd-prefix -t f "$exts" "$@" \
    | browser \
    | xargs -r -I {} sh -c 'if [ -n "$OPEN_XORG" ]; then setsid xdg-open '\'{}\'' & else $EDITOR '\'{}\''; fi;'
