#!/usr/bin/env sh

if [ -n "$1" ]; then
    cd "$1" || exit 1
    shift
fi

exts='\.(jpe?g|png|gif|mkv|mp4|m4v|avi|webm|pdf|djvu|epub|txt|md|sent|svg|html|cbr|cbz)$'

fd --strip-cwd-prefix -t f "$exts" "$@" \
    | dmenu -i -p "open $(pwd)" -theme-str 'window {width: 80%;}' \
    | xargs -r -I {} sh -c 'setsid xdg-open "{}" &'
